{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "nodenext",
    "lib": [
      "ES2020",
    ],
    "skipLibCheck": true,
    "outDir": "dist",
    "verbatimModuleSyntax": true,
    /* Linting */
    "strict": true,
    // "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ]
}